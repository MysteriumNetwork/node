#!/bin/bash

# Run Go vet command for project packages
#
# Usage:
#> bin/vet [packages ...]
#
# Examples:
#> bin/vet
#> bin/vet .
#> bin/vet ./...
#> bin/vet ./communication
#> bin/vet ./communication/...

ARGUMENTS=$@
if [ -z "$ARGUMENTS" ]; then
    ARGUMENTS=`go list ./...`
fi

go vet -composites=false ${ARGUMENTS}
