#!/bin/bash

# Run code Linter for project packages
#
# Usage:
#> bin/lint
#> bin/lint ./...
#> bin/lint ./communication
#> bin/lint ./communication/...

ARGUMENTS=$@
if [ -z "$ARGUMENTS" ]; then
    ARGUMENTS=`go list ./...`
fi

go run vendor/github.com/golang/lint/golint/*.go --set_exit_status --min_confidence=1 ${ARGUMENTS}
