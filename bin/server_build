#!/bin/bash

# Usage example:
#> bin/server_build
#
# Cross compile (Unix):
#> GOOS=linux GOARCH=amd64 bin/server_build
#
# Cross compile (OSX):
#> GOOS=darwin GOARCH=amd64 bin/server_build
#
# Cross compile (Windows):
#> GOOS=windows GOARCH=amd64 bin/server_build
#
# Check if program has dynamic libraries:
#> readelf -d /build/server/mysterium_server

: ${GOOS:=`go env GOHOSTOS`}
: ${GOARCH:=`go env GOHOSTARCH`}

if [ ! -f .env ]; then
    printf "\e[0;31m%s\e[0m\n" "Environment file must be set!"
    exit 1
fi

source .env

flags="-X 'github.com/mysterium/node/server.mysteriumApiUrl=${MYSTERIUM_API_URL}'"

echo "Compiling 'mysterium_server' for '$GOOS/$GOARCH'.."
GOBIN=`pwd`/build/server go install -ldflags="$flags" cmd/mysterium_server/mysterium_server.go
if [ $? -ne 0 ]; then
    printf "\e[0;31m%s\e[0m\n" "Compile failed!"
    exit 1
fi

exit 0